<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/alert_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대할 친구들을 선택 해주세요"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/invite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동으로 친구들이 공유방에 초대돼요"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/select_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/invite_horizontal_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/invite_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/friend_profile_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#CFDEFF">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/invite_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/cancel_check_button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#00ff0000"
        android:text="취소"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/invite_horizontal_scrollview"
        app:layout_constraintRight_toLeftOf="@id/invite_check_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/invite_check_button"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#00ff0000"
        android:text="확인"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/invite_horizontal_scrollview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_check_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>