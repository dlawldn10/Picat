<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_share_picture_layout"
    android:clipToPadding="false">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/picat_layout_padding"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/picat_light_blue">

                <EditText
                    android:id="@+id/room_name_editText"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:hint="앨범 이름을 입력하세요"
                    android:gravity="center"
                    android:textColor="@color/picat_font_color"
                    android:textSize="@dimen/picat_text_size_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/edit_icn"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:padding="1dp"
                    android:layout_marginLeft="1dp"
                    app:layout_constraintLeft_toRightOf="@+id/room_name_editText"
                    app:layout_constraintBottom_toBottomOf="@id/room_name_editText"
                    app:layout_constraintTop_toTopOf="@+id/room_name_editText"/>

                <HorizontalScrollView
                    android:id="@+id/profile_horizontal_scrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/room_name_editText">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false">

                        <!-- 임시로 넣어놓은 CardView. 발표 후 삭제-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/profile_item_cardview"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            app:cardCornerRadius="300dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/profile_item_imageview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/picat_boundary_line_color"
                                app:srcCompat="@drawable/ic_launcher_foreground" />

                        </androidx.cardview.widget.CardView>

                        <ImageButton
                            android:id="@+id/profile_item_plus_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_button_shape_blue"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/plus_fab"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/profile_item_cardview"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--                        <androidx.recyclerview.widget.RecyclerView-->
                        <!--                            android:id="@+id/profile_recyclerview"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                        <!--                            app:layout_constraintLeft_toLeftOf="parent">-->
                        <!--                        </androidx.recyclerview.widget.RecyclerView>-->

                        <!--                        <ImageButton-->
                        <!--                            android:layout_width="20dp"-->
                        <!--                            android:layout_height="20dp"-->
                        <!--                            android:background="@drawable/round_button_shape_blue"-->
                        <!--                            android:src="@drawable/plus_fab"-->
                        <!--                            android:scaleType="fitCenter"-->
                        <!--                            android:padding="5dp"-->
                        <!--                            android:layout_marginLeft="10dp"-->
                        <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                        <!--                            app:layout_constraintLeft_toRightOf="@id/profile_recyclerview"-->
                        <!--                            app:layout_constraintTop_toTopOf="parent"-->
                        <!--                            app:layout_constraintRight_toRightOf="parent"/>-->

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/below_view_wrapper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/profile_tab"
                android:paddingHorizontal="@dimen/picat_layout_padding"
                android:paddingTop="20dp"
                >

