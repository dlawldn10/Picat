<!--                        app:layout_constraintBottom_toBottomOf="parent"/>-->


<!--                </androidx.constraintlayout.widget.ConstraintLayout>-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/face_sort_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
<!--                    app:layout_constraintTop_toBottomOf="@id/automatic_upload_tab">-->

                    <TextView
                        android:id="@+id/face_sort_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인물별 보기"
                        android:includeFontPadding="false"
                        android:textColor="@color/picat_font_color"
                        android:textSize="@dimen/picat_text_size_small"
                        android:fontFamily="@font/notosans_bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <HorizontalScrollView
                        android:id="@+id/face_sort_horizontal_scrollview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/face_sort_textview"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            >

                            <!-- 임시로 넣어놓은 CardView. 발표 후 삭제-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/face_item_cardview"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                app:cardCornerRadius="300dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_margin="20dp">

                                <ImageView
                                    android:id="@+id/face_item_imageview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/picat_boundary_line_color"
                                    app:srcCompat="@drawable/ic_launcher_foreground"
                                    />

                            </androidx.cardview.widget.CardView>

                            <!-- 임시로 넣어놓은 CardView. 발표 후 삭제-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/face_item_cardview2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                app:cardCornerRadius="300dp"
                                app:layout_constraintLeft_toRightOf="@+id/face_item_cardview"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/face_item_cardview3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_margin="20dp">

                                <ImageView
                                    android:id="@+id/face_item_imageview2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/picat_boundary_line_color"
                                    app:srcCompat="@drawable/ic_launcher_foreground"/>

                            </androidx.cardview.widget.CardView>

                            <!-- 임시로 넣어놓은 CardView. 발표 후 삭제-->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/face_item_cardview3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                app:cardCornerRadius="300dp"
                                app:layout_constraintLeft_toRightOf="@+id/face_item_cardview2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <ImageView
                                    android:id="@+id/face_item_imageview3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/picat_boundary_line_color"
                                    app:srcCompat="@drawable/ic_launcher_foreground"/>

                            </androidx.cardview.widget.CardView>

                            <!--                        <androidx.recyclerview.widget.RecyclerView-->
                            <!--                            android:id="@+id/profile_recyclerview"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                            <!--                            app:layout_constraintLeft_toLeftOf="parent">-->
                            <!--                        </androidx.recyclerview.widget.RecyclerView>-->

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/face_sort_tab_boundary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/picat_boundary_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/face_sort_tab" />

                <!-- 중복된 사진 탭  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/same_sort_tab"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/face_sort_tab_boundary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중복된 사진"
                        android:textSize="@dimen/picat_text_size_small"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@color/picat_font_color"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageButton
                        android:id="@+id/expand_same_button"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/unfold_icn"
                        android:scaleType="fitCenter"
                        android:padding="1dp"
                        android:backgroundTint="@color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/same_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/same_sort_tab" />

                <ImageView
                    android:id="@+id/same_sort_tab_boundary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/picat_boundary_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/same_recyclerview" />


                <!-- 흐린 사진 탭  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/blur_sort_tab"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/same_sort_tab_boundary" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="흐린 사진"
                        android:textSize="@dimen/picat_text_size_small"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@color/picat_font_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageButton
                        android:id="@+id/expand_blur_button"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/unfold_icn"
                        android:scaleType="fitCenter"
                        android:padding="1dp"
                        android:backgroundTint="@color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/blur_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/blur_sort_tab" />

                <ImageView
                    android:id="@+id/blur_sort_tab_boundary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/picat_boundary_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blur_recyclerview" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/blur_recyclerview">

                    <TextView
                        android:id="@+id/upload_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="나머지 사진"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/picat_text_size_small"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@color/picat_font_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <!-- 나머지 사진  -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/picture_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/upload_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_bottomsheet_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_fab"
        android:backgroundTint="@color/picat_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:layout_margin="@dimen/picat_layout_padding"/>

</androidx.constraintlayout.widget.ConstraintLayout>



